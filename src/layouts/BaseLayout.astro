---
import '../style.css';

const { title = "Парк Бугульма" } = Astro.props;

const navItems = [
  { name: 'Главная', url: '/' },
  { name: 'Афиша', url: '/events' },
  { name: 'События', url: '/reports' },
  { name: 'Пространства', url: '/locations' },
  { name: 'О парке', url: '/about' },
];
---

<!DOCTYPE html>
<html lang="ru" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com" rel="stylesheet">
    <link rel="icon" type="image/png" href="https://parkbugulma.ru/wp-content/uploads/fav.png" />
    <script src="https://cdnjs.cloudflare.com"></script>
  </head>
  <body class="bg-white font-onest text-[#222222] antialiased">
    
        <!-- HEADER: Адаптивный и чистый -->
    <header class="fixed top-0 left-0 w-full z-50 bg-white border-b border-[#e5e5e5] h-16 md:h-20 flex items-center">
      <div class="max-w-7xl mx-auto px-6 w-full flex justify-between items-center">
        
        <!-- ЛОГОТИП (Бирюзовая Бугульма) -->
<div class="flex items-center gap-4">
  <!-- Здесь графическая часть логотипа -->




  
  <div class="flex flex-col leading-tight uppercase font-bold text-sm tracking-wide">
    <span class="text-slate-900">Дирекция</span>
    <span class="text-slate-900">парков и скверов</span>
    <span class="text-teal-500">города Бугульмы</span>
  </div>
</div>

        <!-- ДЕСКТОП МЕНЮ (Скрыто на мобилках) -->
        <nav class="hidden md:flex items-center gap-10">
          {navItems.map((item) => (
            <a href={item.url} class="text-[16px] font-light text-[#222222] hover:text-teal-600 transition-colors duration-300 no-underline uppercase tracking-tight py-1">
              {item.name}
            </a>
          ))}
        </nav>

        <!-- ПРАВАЯ ЧАСТЬ: Бургер -->
        <div class="flex items-center">
          <button id="menu-toggle" class="text-[#222222] focus:outline-none p-2 -mr-2">
            <svg id="menu-icon" xmlns="http://www.w3.org" class="h-6 w-6 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 8h16M4 16h16" />
            </svg>
          </button>
        </div>
      </div>

      <!-- МОБИЛЬНОЕ МЕНЮ (Полноэкранное) -->
      <div id="mobile-menu" class="fixed inset-0 top-16 bg-white z-40 hidden flex-col justify-center items-center text-center px-6 transition-all duration-500 opacity-0">
        <nav class="flex flex-col gap-8">
          {navItems.map((item) => (
            <a href={item.url} class="text-3xl font-bold text-[#222222] no-underline uppercase tracking-tighter hover:text-teal-600 transition-colors">
              {item.name}
            </a>
          ))}
        </nav>
        <div class="mt-20 pt-10 border-t border-[#e5e5e5] w-full max-w-[200px] text-[10px] font-bold text-[#222222]/30 uppercase tracking-[0.4em]">
          Парки Бугульмы / 2026
        </div>
      </div>
    </header>

    <!-- Отступ под шапку, чтобы Hero не залезал под нее -->
    <div class="h-20"></div>

    <main>
      <slot />
    </main>

<footer class="bg-[#222222] text-white/40 pt-24 pb-12 mt-32 border-t border-[#e5e5e5]/10">
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-16 mb-24">
      
      <!-- 1. ЛОГОТИП И ИНФО -->
      <div class="col-span-1 md:col-span-2">
        <a href="/" class="group flex items-center no-underline mb-8">
          <span class="text-xl font-bold tracking-tighter text-white uppercase">Парки</span>
          <span class="text-xl font-light text-teal-500 uppercase tracking-tighter ml-1.5">Бугульмы</span>
        </a>
        <p class="text-[13px] leading-relaxed max-w-sm font-light">
          Мы создаем современные пространства для жизни и отдыха в Бугульме. Сохраняем историю города и внедряем лучшие практики урбанистики.
        </p>
      </div>

      <!-- 2. РАЗДЕЛЫ -->
      <div>
        <h4 class="text-white text-[10px] font-black uppercase tracking-[0.3em] mb-8">Навигация</h4>
        <nav class="flex flex-col gap-4 text-[13px] font-medium uppercase tracking-widest">
          {navItems.map(item => (
            <a href={item.url} class="hover:text-teal-500 transition-colors no-underline">
              {item.name}
            </a>
          ))}
        </nav>
      </div>

      <!-- 3. КОНТАКТЫ -->
      <div>
        <h4 class="text-white text-[10px] font-black uppercase tracking-[0.3em] mb-8">Связаться</h4>
        <div class="flex flex-col gap-4 text-[13px] font-medium">
          <a href="mailto:info@parkbugulma.ru" class="hover:text-teal-500 transition-colors no-underline">info@parkbugulma.ru</a>
          <a href="tel:+78430000000" class="hover:text-teal-500 transition-colors no-underline">+7 (85594) 0-00-00</a>
          <div class="mt-4 flex gap-4">
            <a href="#" class="w-8 h-8 rounded-full border border-white/10 flex items-center justify-center hover:bg-teal-600 hover:text-white hover:border-teal-600 transition-all">VK</a>
            <a href="#" class="w-8 h-8 rounded-full border border-white/10 flex items-center justify-center hover:bg-teal-600 hover:text-white hover:border-teal-600 transition-all">TG</a>
          </div>
        </div>
      </div>
    </div>

    <!-- НИЖНЯЯ ЛИНИЯ (COPYRIGHT) -->
    <div class="pt-12 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-6">
      <div class="text-[10px] font-bold uppercase tracking-[0.4em]">
        © {new Date().getFullYear()} Дирекция парков и скверов
      </div>
      <div class="flex gap-8 text-[9px] font-bold uppercase tracking-widest">
        <a href="/privacy" class="hover:text-white transition-colors no-underline">Политика конфиденциальности</a>
        <a href="/cookies" class="hover:text-white transition-colors no-underline">Cookies</a>
      </div>
    </div>
  </div>
</footer>


    <script>
      const menuToggle = document.getElementById('menu-toggle');
      const mobileMenu = document.getElementById('mobile-menu');
      const menuIcon = document.getElementById('menu-icon');
      let isOpen = false;

      menuToggle?.addEventListener('click', () => {
        isOpen = !isOpen;
        
        if (isOpen) {
          mobileMenu?.classList.remove('hidden');
          setTimeout(() => mobileMenu?.classList.add('flex', 'opacity-100'), 10);
          menuIcon.style.transform = 'rotate(90deg)';
          document.body.style.overflow = 'hidden'; // Запрет скролла при открытом меню
        } else {
          mobileMenu?.classList.remove('opacity-100');
          setTimeout(() => {
            mobileMenu?.classList.add('hidden');
            mobileMenu?.classList.remove('flex');
          }, 500);
          menuIcon.style.transform = 'rotate(0deg)';
          document.body.style.overflow = '';
        }
      });
    </script>
  </body>
</html>


