---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getPosts, getCleanContent, getFeaturedImage } from "../../utils.js";
import "photoswipe/style.css";

export async function getStaticPaths() {
  const posts = await getPosts();
  return posts.map((post) => ({
    params: { slug: decodeURIComponent(post.slug) },
    props: { post },
  }));
}

const { post } = Astro.props;
const imageUrl = getFeaturedImage(post);
const pageTitle = post.title.rendered.replace(/<\/?[^>]+(>|$)/g, "");
---

<BaseLayout title={pageTitle}>
  <article class="bg-white min-h-screen pb-32">
    
    <!-- ВЕРХНИЙ БЛОК (HERO) -->
<!-- ВЕРХНИЙ БЛОК (HERO) -->
<header class="page-hero-container relative h-[60vh] md:h-[75vh] w-full overflow-hidden bg-[#222222] flex items-center justify-center text-center not-prose">
  {imageUrl && (
    <img 
      src={imageUrl} 
      class="page-hero-img absolute inset-0 w-full h-full object-cover" 
      alt=""
    />
  )}
  <div class="absolute inset-0 bg-gradient-to-t from-[#222222] via-transparent to-transparent"></div>
  
  <div class="relative z-20 max-w-5xl mx-auto px-6">
    <time class="text-[10px] font-black text-teal-400 uppercase tracking-[0.4em] mb-6 block">
      {new Date(post.date).toLocaleDateString('ru-RU', { day: 'numeric', month: 'long', year: 'numeric' })}
    </time>
    <h1 class="text-4xl md:text-7xl font-black text-white tracking-tighter uppercase leading-[0.9] mb-8" set:html={post.title.rendered} />
    <div class="h-1 w-20 bg-teal-600 mx-auto"></div>
  </div>
</header>

    <!-- КОНТЕНТ СТАТЬИ -->
    <div class="max-w-7xl mx-auto px-6 -mt-12 relative z-30">
      <div class="bg-white border border-[#e5e5e5] shadow-2xl rounded-sm overflow-hidden">
        
        <!-- ТЕКСТ (Узкий) -->
        <div class="max-w-3xl mx-auto px-6 md:px-16 pt-16 pb-8">
          <div id="text-content" class="prose prose-slate prose-lg max-w-none prose-p:text-[#222222]/80 prose-p:leading-relaxed">
            <div set:html={getCleanContent(post.content.rendered)} />
          </div>
        </div>

        <!-- ГАЛЕРЕЯ (Широкая) -->
        <div id="gallery-container" class="px-6 md:px-16 pb-20 hidden">
          <div class="h-px w-full bg-[#e5e5e5] mb-16"></div>
          <h3 class="text-[10px] font-black uppercase tracking-[0.4em] text-[#222222]/30 mb-10 text-center">Фотоотчет события</h3>
          <div id="dynamic-gallery" class="grid grid-cols-2 md:grid-cols-4 gap-4"></div>
        </div>

        <!-- ПОДВАЛ -->
        <div class="mt-12 py-12 border-t border-[#e5e5e5] flex flex-col md:flex-row justify-between items-center gap-8 px-16 bg-[#fafafa]">
          <div class="text-[10px] font-black text-[#222222]/20 uppercase tracking-[0.3em]">Park Bugulma / Official Post</div>
          <a href="javascript:history.back()" class="group flex items-center text-[11px] font-black text-teal-600 uppercase tracking-widest no-underline">
            <span class="mr-4 group-hover:-translate-x-2 transition-transform">←</span> Назад к событиям
          </a>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<style is:global>
  /* 1. ГАРАНТИЯ ДЛЯ HERO (Никаких квадратов и искажений) */
  .page-hero-container .page-hero-img {
    aspect-ratio: auto !important; /* Отменяем любые 1/1 или 3/2 */
    object-fit: cover !important;
    height: 100% !important;
    width: 100% !important;
    transform: none !important;
    max-height: none !important;
    filter: grayscale(0.2) brightness(0.6) !important;
  }

  /* 2. СТИЛИ ТОЛЬКО ДЛЯ СЕТКИ ГАЛЕРЕИ ВНИЗУ */
  /* Используем ID, чтобы стили не "утекли" выше */
  #dynamic-gallery .pswp-gallery-item {
    aspect-ratio: 1/1 !important; /* Квадраты только здесь */
    display: block !important;
    overflow: hidden !important;
    border-radius: 4px !important;
  }

  #dynamic-gallery .pswp-gallery-item img {
    width: 100% !important;
    height: 100% !important;
    object-fit: cover !important;
    margin: 0 !important;
  }

  /* 3. ОЧИСТКА ОТ ВЛИЯНИЯ TYPOGRAPHY (prose) */
  .prose img {
    /* Если в самом тексте есть картинки, они должны быть ровными */
    aspect-ratio: auto !important;
    border-radius: 8px;
  }
</style>

<script>
  import PhotoSwipeLightbox from 'photoswipe/lightbox';
  import PhotoSwipe from 'photoswipe';

  async function moveAndInitGallery() {
    const textBlock = document.getElementById('text-content');
    const galleryGrid = document.getElementById('dynamic-gallery');
    const galleryContainer = document.getElementById('gallery-container');
    const wpImages = textBlock.querySelectorAll('.gallery img, .wp-block-gallery img, .gallery-item img');
    
    if (wpImages.length > 0) {
      galleryContainer.classList.remove('hidden');
      const promises = Array.from(wpImages).map((img) => {
        return new Promise((resolve) => {
          const fullUrl = img.src.replace(/-[0-9]+x[0-9]+(?=\.[a-z]+$)/i, '');
          const link = document.createElement('a');
          link.href = fullUrl;
          link.className = 'pswp-gallery-item';
          
          const tempImg = new Image();
          tempImg.src = fullUrl;
          tempImg.onload = () => {
            link.dataset.pswpWidth = tempImg.width;
            link.dataset.pswpHeight = tempImg.height;
            link.innerHTML = `<img src="${fullUrl}" class="w-full h-full object-cover hover:scale-105 transition-transform duration-500" />`;
            galleryGrid.appendChild(link);
            resolve();
          };
          tempImg.onerror = () => resolve();
        });
      });
      await Promise.all(promises);
      textBlock.querySelectorAll('.gallery, .wp-block-gallery').forEach(el => el.remove());
    }

    const lightbox = new PhotoSwipeLightbox({
      gallery: '#dynamic-gallery',
      children: 'a.pswp-gallery-item',
      pswpModule: PhotoSwipe
    });
    lightbox.init();
  }
  window.addEventListener('load', moveAndInitGallery);
</script>
