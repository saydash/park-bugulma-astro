---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getPosts, getCleanText, getCleanContent, getFeaturedImage } from '../../utils.js';

export async function getStaticPaths() {
  const posts = await getPosts();
  return posts.map((post) => ({
    params: { slug: decodeURIComponent(post.slug) },
    props: { post },
  }));
}

const { post } = Astro.props;
const imageUrl = getFeaturedImage(post);
---

<BaseLayout title={post.title.rendered}>
<article class="bg-white min-h-screen pb-32">
    
    <!-- HERO СТАТЬИ -->
    <header class="relative h-[60vh] md:h-[75vh] w-full overflow-hidden bg-[#222222]">
      {imageUrl && (
        <img 
          src={imageUrl} 
          class="absolute inset-0 w-full h-full object-cover opacity-50 grayscale-[0.2]" 
          alt=""
        />
      )}
      <div class="absolute inset-0 bg-gradient-to-t from-[#222222] via-transparent to-transparent"></div>
      
      <div class="relative z-10 h-full max-w-5xl mx-auto px-6 flex flex-col justify-end pb-16 items-center text-center">
        <time class="text-[10px] font-black text-teal-400 uppercase tracking-[0.4em] mb-6">
          {new Date(post.date).toLocaleDateString('ru-RU', { day: 'numeric', month: 'long', year: 'numeric' })}
        </time>
        
        <!-- Адаптивный заголовок: на мобилках меньше, на десктопе огромный -->
        <h1 
          class="text-4xl md:text-7xl lg:text-[90px] font-black text-white tracking-tighter uppercase leading-[0.9] mb-8 max-w-4xl" 
          set:html={post.title.rendered} 
        />
        
        <div class="h-1 w-20 bg-teal-600"></div>
      </div>
    </header>

    <!-- КОНТЕНТ -->
    <div class="max-w-4xl mx-auto px-6 -mt-12 relative z-20">
      <div class="bg-white p-8 md:p-20 border border-[#e5e5e5] shadow-2xl">
        
        <!-- ОЧИЩЕННЫЙ ВЫВОД ЧЕРЕЗ PROSE -->
        <div class="prose prose-slate prose-lg md:prose-xl max-w-none 
          prose-headings:text-[#222222] prose-headings:font-black prose-headings:uppercase prose-headings:tracking-tighter
          prose-p:text-[#222222]/80 prose-p:leading-relaxed prose-p:mb-8
          prose-a:text-teal-600 prose-a:font-bold prose-a:no-underline hover:prose-a:border-b-2 border-teal-600
          prose-img:rounded-sm prose-img:shadow-xl prose-img:mx-auto
          prose-strong:text-[#222222]
          prose-blockquote:border-l-4 prose-blockquote:border-teal-500 prose-blockquote:italic prose-blockquote:text-xl"
        >
          <div set:html={getCleanContent(post.content.rendered)} />
        </div>

        <!-- ПОДВАЛ СТАТЬИ -->
        <div class="mt-24 pt-12 border-t border-[#e5e5e5] flex flex-col md:flex-row justify-between items-center gap-8">
          <div class="text-[10px] font-black text-[#222222]/20 uppercase tracking-[0.3em]">
            Park Bugulma / Official Post
          </div>
          <a href="javascript:history.back()" class="group flex items-center text-[11px] font-black text-teal-600 uppercase tracking-widest no-underline">
            <span class="mr-4 group-hover:-translate-x-2 transition-transform">←</span> 
            Назад к событиям
          </a>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<style is:global>
  /* Жесткая фиксация сетки для динамических галерей */
  .wp-custom-gallery {
    display: grid !important;
    grid-template-columns: repeat(2, 1fr) !important; /* 2 колонки на мобилках */
    gap: 12px !important;
    margin: 3rem 0 !important;
  }

  /* На десктопе делаем 3 колонки и интересную раскладку */
  @media (min-width: 768px) {
    .wp-custom-gallery {
      grid-template-columns: repeat(3, 1fr) !important;
    }
    
    /* Каждое 4-е фото делаем широким для "интересной" сетки */
    .gallery-item:nth-child(4n) {
      grid-column: span 2;
    }
  }

  .gallery-item {
    display: block;
    position: relative;
    aspect-ratio: 3/2; /* Все фото в одном формате */
    overflow: hidden;
    background: #f4f4f4;
    border-radius: 4px;
  }

  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .gallery-item:hover img {
    transform: scale(1.05);
  }
</style>



<script is:inline src="https://cdnjs.cloudflare.com"></script>

<script is:inline>
  async function initGallery() {
    const galleries = document.querySelectorAll('.wp-custom-gallery');
    
    for (const gallery of galleries) {
      const ids = gallery.getAttribute('data-ids').split(',');
      
      for (const id of ids) {
        // Прокси для обхода блокировок хостинга
        const target = `https://parkbugulma.ru{id.trim()}`;
        const proxy = `https://api.allorigins.win{encodeURIComponent(target)}`;

        try {
          const res = await fetch(proxy);
          const data = await res.json();
          
          if (data.source_url) {
            const a = document.createElement('a');
            a.className = 'gallery-item';
            a.setAttribute('data-fslightbox', 'gallery-main');
            a.setAttribute('href', data.source_url);
            a.innerHTML = `<img src="${data.source_url}" loading="lazy" />`;
            gallery.appendChild(a);
          }
        } catch (e) { console.warn("Media error:", id); }
      }
    }
    // Оживляем лайтбокс после загрузки всех фото
    if (window.refreshFsLightbox) refreshFsLightbox();
  }
  initGallery();
</script>

