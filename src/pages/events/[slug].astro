---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getPosts, getCleanText, getCleanContent, getFeaturedImage } from '../../utils.js';

export async function getStaticPaths() {
  const posts = await getPosts();
  return posts.map((post) => ({
    params: { slug: decodeURIComponent(post.slug) },
    props: { post },
  }));
}

const { post } = Astro.props;
const imageUrl = getFeaturedImage(post);
---

<BaseLayout title={post.title.rendered}>
<article class="bg-white min-h-screen pb-32">
    
    <!-- HERO СТАТЬИ -->
    <header class="relative h-[60vh] md:h-[75vh] w-full overflow-hidden bg-[#222222]">
      {imageUrl && (
        <img 
          src={imageUrl} 
          class="absolute inset-0 w-full h-full object-cover opacity-50 grayscale-[0.2]" 
          alt=""
        />
      )}
      <div class="absolute inset-0 bg-gradient-to-t from-[#222222] via-transparent to-transparent"></div>
      
      <div class="relative z-10 h-full max-w-5xl mx-auto px-6 flex flex-col justify-end pb-16 items-center text-center">
        <time class="text-[10px] font-black text-teal-400 uppercase tracking-[0.4em] mb-6">
          {new Date(post.date).toLocaleDateString('ru-RU', { day: 'numeric', month: 'long', year: 'numeric' })}
        </time>
        
        <!-- Адаптивный заголовок: на мобилках меньше, на десктопе огромный -->
        <h1 
          class="text-4xl md:text-7xl lg:text-[90px] font-black text-white tracking-tighter uppercase leading-[0.9] mb-8 max-w-4xl" 
          set:html={post.title.rendered} 
        />
        
        <div class="h-1 w-20 bg-teal-600"></div>
      </div>
    </header>

    <!-- КОНТЕНТ -->
    <div class="max-w-4xl mx-auto px-6 -mt-12 relative z-20">
      <div class="bg-white p-8 md:p-20 border border-[#e5e5e5] shadow-2xl">
        
        <!-- ОЧИЩЕННЫЙ ВЫВОД ЧЕРЕЗ PROSE -->
        <div class="prose prose-slate prose-lg md:prose-xl max-w-none 
          prose-headings:text-[#222222] prose-headings:font-black prose-headings:uppercase prose-headings:tracking-tighter
          prose-p:text-[#222222]/80 prose-p:leading-relaxed prose-p:mb-8
          prose-a:text-teal-600 prose-a:font-bold prose-a:no-underline hover:prose-a:border-b-2 border-teal-600
          prose-img:rounded-sm prose-img:shadow-xl prose-img:mx-auto
          prose-strong:text-[#222222]
          prose-blockquote:border-l-4 prose-blockquote:border-teal-500 prose-blockquote:italic prose-blockquote:text-xl"
        >
          <div set:html={getCleanContent(post.content.rendered)} />
        </div>

        <!-- ПОДВАЛ СТАТЬИ -->
        <div class="mt-24 pt-12 border-t border-[#e5e5e5] flex flex-col md:flex-row justify-between items-center gap-8">
          <div class="text-[10px] font-black text-[#222222]/20 uppercase tracking-[0.3em]">
            Park Bugulma / Official Post
          </div>
          <a href="javascript:history.back()" class="group flex items-center text-[11px] font-black text-teal-600 uppercase tracking-widest no-underline">
            <span class="mr-4 group-hover:-translate-x-2 transition-transform">←</span> 
            Назад к событиям
          </a>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<!-- 1. СТИЛИ ГАЛЕРЕИ (вставляем прямо перед контентом) -->
<style is:global>
  /* 1. Находим стандартную обертку галереи из WordPress и превращаем в сетку */
  .prose .gallery, 
  .prose .wp-block-gallery {
    display: grid !important;
    grid-template-columns: repeat(2, 1fr) !important;
    gap: 12px !important;
    margin: 3rem 0 !important;
    padding: 0 !important;
  }

  @media (min-width: 768px) {
    .prose .gallery, 
    .prose .wp-block-gallery {
      grid-template-columns: repeat(3, 1fr) !important;
    }
  }

  /* 2. Чистим элементы внутри галереи от старых стилей WP */
  .prose .gallery-item, 
  .prose .gallery-icon {
    margin: 0 !important;
    display: block !important;
    width: 100% !important;
    aspect-ratio: 3/2 !important;
    overflow: hidden !important;
    border-radius: 8px !important;
  }

  /* 3. Оформляем сами картинки */
  .prose .gallery-item img, 
  .prose .gallery-icon img {
    width: 100% !important;
    height: 100% !important;
    object-fit: cover !important;
    margin: 0 !important;
    transition: transform 0.5s ease !important;
    cursor: zoom-in !important;
  }

  .prose .gallery-item img:hover {
    transform: scale(1.05) !important;
  }

  /* Убираем подписи под фото, если они мешают */
  .prose .gallery-caption {
    display: none !important;
  }

    /* Фикс для fslightbox, чтобы он всегда был поверх всего */
  .fslightbox-container {
    z-index: 999999 !important;
  }
  /* Убедимся, что курсор показывает возможность клика */
  .gallery-item img, .gallery-icon img {
    cursor: pointer !important;
  }
</style>


<!-- 2. Скрипт-оживитель -->
<script is:inline>
  function activateLightbox() {
    // 1. Находим все картинки в галереях
    const images = document.querySelectorAll('.prose .gallery-item img, .prose .gallery-icon img, .wp-block-image img');
    
    images.forEach(img => {
      // 2. Если картинка еще не обернута в ссылку лайтбокса
      if (!img.closest('a[data-fslightbox]')) {
        const link = document.createElement('a');
        
        // Получаем чистую ссылку на оригинал (без размеров типа -600x400)
        const fullResUrl = img.src.replace(/-[0-9]+x[0-9]+(?=\.[a-z]+$)/i, '');
        
        link.setAttribute('href', fullResUrl);
        link.setAttribute('data-fslightbox', 'gallery-post'); // Группа для перелистывания
        link.className = 'block w-full h-full cursor-zoom-in';

        // 3. Оборачиваем
        img.parentNode.insertBefore(link, img);
        link.appendChild(img);
      }
    });

    // 4. ГЛАВНОЕ: Принудительно инициализируем библиотеку
    if (window.refreshFsLightbox) {
      window.refreshFsLightbox();
    }
  }

  // Запуск процесса (ждем загрузки и повторяем для надежности)
  window.addEventListener('load', () => {
    activateLightbox();
    setTimeout(activateLightbox, 1000);
    setTimeout(activateLightbox, 3000);
  });
</script>