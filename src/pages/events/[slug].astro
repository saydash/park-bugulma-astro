---
import BaseLayout from "../../layouts/BaseLayout.astro";
import {
  getPosts,
  getCleanText,
  getCleanContent,
  getFeaturedImage,
} from "../../utils.js";
import "photoswipe/style.css";

export async function getStaticPaths() {
  const posts = await getPosts();
  return posts.map((post) => ({
    params: { slug: decodeURIComponent(post.slug) },
    props: { post },
  }));
}

const { post } = Astro.props;
const imageUrl = getFeaturedImage(post);
---

<BaseLayout title={post.title.rendered}>
  <article class="bg-white min-h-screen pb-32">
    <!-- ВЕРХНИЙ БЛОК (HERO СТАТЬИ) -->
<header class="relative h-[60vh] md:h-[70vh] w-full overflow-hidden bg-[#222222] not-prose">
  <!-- СТРОГО ДЛЯ СТРАНИЦЫ ЗАПИСИ -->
{imageUrl && (
  <img 
    src={imageUrl} 
    class="absolute inset-0 w-full h-full object-cover object-center opacity-60 grayscale-[0.2]" 
    style="min-height: 100%; min-width: 100%; object-fit: cover !important; transform: none !important; aspect-ratio: auto !important;"
    alt=""
  />
)}
  <div class="absolute inset-0 bg-gradient-to-t from-[#222222] via-transparent to-transparent"></div>
  
  <!-- ... остальной контент заголовка ... -->
</header>

    <!-- КОНТЕНТ -->
    <div class="max-w-7xl mx-auto px-6 -mt-12 relative z-20">
      <div class="bg-white border border-[#e5e5e5] shadow-2xl">
        <!-- 1. КОНТЕЙНЕР ДЛЯ ТЕКСТА (Узкий) -->
        <div class="max-w-3xl mx-auto px-6 md:px-16 pt-16 pb-8">
          <div
            id="text-content"
            class="prose prose-slate prose-lg max-w-none
        prose-p:text-[#222222]/80 prose-p:leading-relaxed"
          >
            <div set:html={getCleanContent(post.content.rendered)} />
          </div>
        </div>

        <!-- 2. КОНТЕЙНЕР ДЛЯ ГАЛЕРЕИ (Широкий) -->
        <div id="gallery-container" class="px-6 md:px-16 pb-20 hidden">
          <div class="h-px w-full bg-[#e5e5e5] mb-16"></div>
          <h3
            class="text-[10px] font-black uppercase tracking-[0.4em] text-[#222222]/30 mb-10 text-center"
          >
            Фотоотчет события
          </h3>
          <div
            id="dynamic-gallery"
            class="grid grid-cols-2 md:grid-cols-4 gap-4"
          >
            <!-- Сюда переедут фото из текста -->
          </div>
        </div>

        <!-- ПОДВАЛ СТАТЬИ -->
        <div
          class="mt-24 pt-12 border-t border-[#e5e5e5] flex flex-col md:flex-row justify-between items-center gap-8"
        >
          <div
            class="text-[10px] font-black text-[#222222]/20 uppercase tracking-[0.3em]"
          >
            Park Bugulma / Official Post
          </div>
          <a
            href="javascript:history.back()"
            class="group flex items-center text-[11px] font-black text-teal-600 uppercase tracking-widest no-underline"
          >
            <span class="mr-4 group-hover:-translate-x-2 transition-transform"
              >←</span
            >
            Назад к событиям
          </a>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<!-- 1. СТИЛИ ГАЛЕРЕИ (вставляем прямо перед контентом) -->
<style is:global>
  /* 1. СЕТКА ГАЛЕРЕИ (не трогает Hero) */
  #dynamic-gallery {
    display: grid !important;
    grid-template-columns: repeat(2, 1fr) !important;
    gap: 16px !important;
  }

  @media (min-width: 768px) {
    #dynamic-gallery {
      grid-template-columns: repeat(4, 1fr) !important;
    }
  }

  /* 2. КАРТИНКИ ТОЛЬКО ВНУТРИ ГАЛЕРЕИ */
  #dynamic-gallery .pswp-gallery-item {
    aspect-ratio: 1/1 !important; /* Только здесь превью - квадраты */
    overflow: hidden !important;
    display: block !important;
  }

  #dynamic-gallery .pswp-gallery-item img {
    width: 100% !important;
    height: 100% !important;
    object-fit: cover !important;
    transform: none !important;
    margin: 0 !important;
  }

  /* 3. ВОЗВРАЩАЕМ HERO ПЕРВОЗДАННЫЙ ВИД */
  header img {
    aspect-ratio: auto !important;
    object-fit: cover !important;
    height: 100% !important;
    width: 100% !important;
    max-height: none !important;
    transform: none !important;
  }
</style>

<!-- 2. Скрипт-оживитель -->
<script>
  import PhotoSwipeLightbox from 'photoswipe/lightbox';
  import PhotoSwipe from 'photoswipe';

  async function moveAndInitGallery() {
    const textBlock = document.getElementById('text-content');
    const galleryGrid = document.getElementById('dynamic-gallery');
    const galleryContainer = document.getElementById('gallery-container');
    
    // Находим все картинки внутри старых галерей WP
    const wpImages = textBlock.querySelectorAll('.gallery img, .wp-block-gallery img, .gallery-item img');
    
    if (wpImages.length > 0) {
      galleryContainer.classList.remove('hidden'); // Показываем широкий блок
      
      const promises = Array.from(wpImages).map((img) => {
        return new Promise((resolve) => {
          const fullUrl = img.src.replace(/-[0-9]+x[0-9]+(?=\.[a-z]+$)/i, '');
          
          // Создаем элемент для новой широкой сетки
          const link = document.createElement('a');
          link.href = fullUrl;
          link.className = 'pswp-gallery-item block overflow-hidden rounded-lg aspect-square bg-slate-50';
          
          const tempImg = new Image();
          tempImg.src = fullUrl;
          tempImg.onload = () => {
            link.dataset.pswpWidth = tempImg.width;
            link.dataset.pswpHeight = tempImg.height;
            link.innerHTML = `<img src="${fullUrl}" class="w-full h-full object-cover hover:scale-105 transition-transform duration-500" />`;
            
            galleryGrid.appendChild(link);
            
            // Удаляем картинку из текста, чтобы она не дублировалась
            const parentToRemove = img.closest('.gallery') || img.closest('.wp-block-gallery') || img;
            if (parentToRemove && parentToRemove.parentNode) {
                // Если это одиночная картинка — удаляем её, если галерея — она удалится после цикла
            }
            resolve();
          };
        });
      });

      await Promise.all(promises);
      
      // Удаляем пустые обертки галерей из текста
      textBlock.querySelectorAll('.gallery, .wp-block-gallery').forEach(el => el.remove());
    }

    // Инициализация PhotoSwipe
    const lightbox = new PhotoSwipeLightbox({
      gallery: '#dynamic-gallery',
      children: 'a.pswp-gallery-item',
      pswpModule: PhotoSwipe
    });
    lightbox.init();
  }

  window.addEventListener('load', moveAndInitGallery);
</script>
