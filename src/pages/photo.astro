---
//import posts from '../posts.json';
import CategoryBlog from '../components/CategoryBlog.astro';
// 1. Импортируем функцию получения данных
import { getPosts } from '../utils.js'; 

// 2. Ждем получения живых данных с сайта
const posts = await getPosts();

const CAT_ID = 8; // ID категории События
const filteredPosts = posts.filter(p => p.categories.includes(CAT_ID));
---

<CategoryBlog title="Фото" posts={filteredPosts} />